{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",

    /* Module System (Next.js 16 compatible) */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Performance */
    "skipLibCheck": true,
    "noEmit": true,

    /* Next.js specific */
    "isolatedModules": true,
    "incremental": true
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "out"
  ]
}
